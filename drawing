from turtle import *
from time import sleep
pendown()
def turtle_controller(do, val):
    do = do.upper()
    if do == 'F':
        forward(val)
    elif do == 'R':
        right(val)
    elif do == 'L':
        left(val)
        
    turtle_controller('F', 100) 
    turtle_controller('R', 60)
    turtle_controller('F', 100)
    turtle_controller('L', 120)
    turtle_controller('F', 50)
    turtle_controller('L', 120)
    turtle_controller('F', 200)
sleep(10)